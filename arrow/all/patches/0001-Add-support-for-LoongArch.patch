@@ -36,6 +36,8 @@ if(NOT DEFINED ARROW_CPU_FLAG)
     set(ARROW_CPU_FLAG "s390x")
   elseif(CMAKE_SYSTEM_PROCESSOR MATCHES "riscv64")
     set(ARROW_CPU_FLAG "riscv64")
